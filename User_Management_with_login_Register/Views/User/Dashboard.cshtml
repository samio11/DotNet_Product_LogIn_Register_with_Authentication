@model List<User_Management_with_login_Register.Context.User_info>
@{
    ViewBag.Title = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2>Welcome, @ViewBag.Name</h2>
    <p>Your role: @ViewBag.Role</p>
    <hr />

    <h4>User List</h4>
    <table class="table table-bordered table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Logout", "User")" class="btn btn-outline-secondary">Logout</a>
</div>
